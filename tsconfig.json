{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "./",
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"src/*": ["src/*"]
		},
		"types": ["jest"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"]
}
